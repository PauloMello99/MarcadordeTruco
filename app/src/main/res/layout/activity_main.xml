<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:screenOrientation="portrait"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grupo A"
                        style="@style/TeamNameTextView"/>

                    <TextView
                        android:id="@+id/score_team_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/TeamScoreTextView"/>

                    <Button
                        android:id="@+id/buttonAddOneA"
                        android:text="+1"
                        android:onClick="addOneTeamA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addThreeTeamA"
                        android:id="@+id/buttonAddThreeA"
                        android:text="+3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addSixTeamA"
                        android:id="@+id/buttonAddSixA"
                        android:text="+6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addNineTeamA"
                        android:id="@+id/buttonAddNineA"
                        android:text="+9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addTwelveTeamA"
                        android:id="@+id/buttonAddTwelveA"
                        android:text="+12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:id="@+id/stackA"
                        style="@style/ButtonOutlineBorder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="stackAtA"
                        android:text="@string/back" />


                </LinearLayout>

                <View
                    android:background="@color/colorLabel"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="2dp"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grupo B"
                        style="@style/TeamNameTextView"/>

                    <TextView
                        android:id="@+id/score_team_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/TeamScoreTextView"/>

                    <Button
                        android:onClick="addOneTeamB"
                        android:id="@+id/buttonAddOneB"
                        android:text="+1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addThreeTeamB"
                        android:id="@+id/buttonAddThreeB"
                        android:text="+3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addSixTeamB"
                        android:id="@+id/buttonAddSixB"
                        android:text="+6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addNineTeamB"
                        android:id="@+id/buttonAddNineB"
                        android:text="+9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="addTwelveTeamB"
                        android:id="@+id/buttonAddTwelveB"
                        android:text="+12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                    <Button
                        android:onClick="stackAtB"
                        android:id="@+id/stackB"
                        android:text="@string/back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/ButtonOutlineBorder"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:onClick="reset"
                android:id="@+id/buttonReset"
                android:layout_marginTop="12dp"
                android:text="@string/reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ButtonOutlineBorder"/>

        </LinearLayout>

    </ScrollView>